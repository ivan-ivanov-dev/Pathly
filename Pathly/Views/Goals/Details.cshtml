@using Pathly.Models.ViewModels.Goals
@model GoalDetailsViewModel
@{
    ViewData["Title"] = "Goal Details";
}

<div class="container mt-4">
    <h2>Goal Details</h2>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@Model.Title</h4>

            @if (!string.IsNullOrEmpty(Model.ShortDescription))
            {
                <p class="card-text">@Model.ShortDescription</p>
            }

            <p>
                <strong>Target date:</strong>
                @(Model.TargetDate.HasValue? Model.TargetDate.Value.ToShortDateString() : "No deadline")
            </p>

            <p>
                <strong>Status:</strong>
                @(Model.IsActive ? "Active" : "Inactive")
            </p>

            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back</a>
        </div>
    </div>
</div>
