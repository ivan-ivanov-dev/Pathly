<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pathly</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />
    <partial name="_Favicons" />
</head>

@{
       var controller = ViewContext.RouteData.Values["Controller"]?.ToString();
       var action = ViewContext.RouteData.Values["Action"]?.ToString();

       var isAuthPage = controller == "Account" && (action == "Login" || action == "Register");
       var isDashboard = controller == "Dashboard" && action == "Index";
       var isLandingPage = controller == "Home" && action == "Index";
       var isRoadmap = controller == "Roadmap" && (action == "Create" || action == "Details"|| action == "Edit"|| action == "Selection");
}

<body class="@(isAuthPage ? "auth-page-body" : "") @(isDashboard ? "dashboard-page-body" : "")">
    @* Header: ONLY on Landing Page for anonymous users *@
    @if (!User.Identity.IsAuthenticated && isLandingPage)
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-light bg-transparent border-bottom mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                        <img src="~/images/PathlyLogo.png" alt="Pathly" class="app-logo" />
                    </a>
                    <button class="navbar-toggler navbar-toggle" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1"></ul>
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Identity" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Identity" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }
    else
    {
    @* Mobile-only fixed button to open offcanvas (keeps header removed on auth) *@
    <button type="button" class="btn btn-outline-secondary sidebar-toggle-fixed d-lg-none" data-bs-toggle="offcanvas"
        data-bs-target="#sidebarOffcanvas" aria-controls="sidebarOffcanvas" aria-label="Open navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    }

    @* Sidebar: Only for Authenticated Users *@
    @if (User.Identity.IsAuthenticated)
    {
        @* Sidebar (Mobile) *@
        <div class="offcanvas offcanvas-start" tabindex="-1" id="sidebarOffcanvas">
            <div class="offcanvas-header border-bottom">
                <a asp-controller="Dashboard" asp-action="Index">
                    <img src="~/images/PathlyLogo.png" alt="Pathly" style="height: 35px;" />
                </a>
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"></button>
            </div>
            <div class="offcanvas-body">
                <nav class="sidebar-nav">
                    <a class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Dashboard" ? "active" : "")"
                       asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                    <a class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Tasks" ? "active" : "")"
                       asp-controller="Tasks" asp-action="Index">Tasks</a>
                    <a class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Goals" ? "active" : "")"
                       asp-controller="Goals" asp-action="Index">Goals</a>
                    <a class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Roadmap" ? "active" : "")"
                       asp-controller="Roadmap" asp-action="Selection">Roadmaps</a>
                </nav>
            </div>
            <div class="sidebar-footer">
                <div class="d-flex align-items-center user-profile-wrapper mb-3">
                    <div class="user-avatar-circle">
                        <span class="avatar-initial">@User.Identity?.Name?[0].ToString().ToUpper()</span>
                    </div>

                    <div class="ms-3 sidebar-link-text user-info-text">
                        <p class="mb-0 fw-bold text-dark text-truncate" style="max-width: 140px;">
                            @User.Identity?.Name
                        </p>
                        <a asp-controller="Account" asp-action="Manage" class="small text-primary text-decoration-none">
                            Account Settings
                        </a>
                    </div>
                </div>

                <form asp-area="Identity" asp-controller="Account" asp-action="Logout" method="post" class="w-100">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-sm btn-outline-danger w-100 d-flex align-items-center justify-content-center gap-2 logout-btn" title="Logout">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0v2z" />
                            <path fill-rule="evenodd" d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z" />
                        </svg>
                        <span class="sidebar-link-text">Logout</span>
                    </button>
                </form>
            </div>
        </div>

        @* Sidebar (Desktop) *@
        <aside class="sidebar-desktop d-none d-lg-flex" id="sidebarDesktop">
            <div class="sidebar-brand">
                @* Logo only - wrapped in a link to Dashboard *@
                <a asp-controller="Dashboard" asp-action="Index" class="d-flex align-items-center">
                    <img src="~/images/PathlyLogo.png" alt="Pathly" class="sidebar-logo-img" />
                </a>

                <button id="sidebarCollapseBtn" class="btn btn-sm sidebar-collapse-btn">
                    <span aria-hidden="true">⮜</span>
                </button>
            </div>

            <nav class="sidebar-nav">
                <a class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Dashboard" ? "active" : "")"
                   asp-controller="Dashboard" asp-action="Index">
                    <span class="sidebar-link-text">Dashboard</span>
                </a>
                <a class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Tasks" ? "active" : "")"
                   asp-controller="Tasks" asp-action="Index">
                    <span class="sidebar-link-text">Tasks</span>
                </a>
                <a class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Goals" ? "active" : "")"
                   asp-controller="Goals" asp-action="Index">
                    <span class="sidebar-link-text">Goals</span>
                </a>
                <a class="sidebar-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Roadmap" ? "active" : "")"
                   asp-controller="Roadmap" asp-action="Selection">
                    <span class="sidebar-link-text">Roadmaps</span>
                </a>
            </nav>

            <div class="sidebar-footer">
                <div class="d-flex align-items-center user-profile-wrapper mb-3">
                    <div class="user-avatar-circle">
                        <span class="avatar-initial">@User.Identity?.Name?[0].ToString().ToUpper()</span>
                    </div>

                    <div class="ms-3 sidebar-link-text user-info-text">
                        <p class="mb-0 fw-bold text-dark text-truncate" style="max-width: 140px;">
                            @User.Identity?.Name
                        </p>
                        <a asp-controller="Account" asp-action="Manage" class="small text-primary text-decoration-none">
                            Account Settings
                        </a>
                    </div>
                </div>

                <form asp-area="Identity" asp-controller="Account" asp-action="Logout" method="post" class="w-100">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-sm btn-outline-danger w-100 d-flex align-items-center justify-content-center gap-2 logout-btn" title="Logout">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0v2z" />
                            <path fill-rule="evenodd" d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z" />
                        </svg>
                        <span class="sidebar-link-text">Logout</span>
                    </button>
                </form>
            </div>
        </aside>
    }

    <div class="@(isAuthPage ? "auth-container-centered" : isDashboard ? "dashboard-wrapper" : isRoadmap ? "roadmap-wrapper" : "container")">
        <main role="main" class="main-content pb-3">
            @RenderBody()
        </main>
    </div>

    @if (!isAuthPage)
    {
        <footer class="footer mt-auto py-4 custom-footer-bg">
            <div class="container">
                <div class="d-flex flex-column flex-md-row align-items-center justify-content-center gap-4">

                    @* Combined Copyright & Brand *@
                    <div class="footer-brand-section text-nowrap">
                        <span class="small">&copy; @DateTime.UtcNow.Year</span>
                        <span class="fw-bold text-primary ms-1">Pathly</span>
                    </div>

                    @* Enhanced Tip Container *@
                    <div class="d-flex align-items-center gap-2">
                        <div id="tip-container" class="p-3 bg-light rounded-3 border-start border-primary border-4 shadow-sm">
                            <i class="me-2 text-primary">💡</i>
                            <span id="productivity-tip" class="fw-medium text-dark footer-tip-text">
                                Small steps lead to big changes.
                            </span>
                        </div>

                        <button type="button" class="btn btn-outline-primary rounded-circle p-2 line-height-1" id="reroll-tip" title="New Tip">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M8 3a5 5 0 1 0 4.546 2.914.5.5 0 0 1 .908-.417A6 6 0 1 1 8 2v1z" />
                                <path d="M8 4.466V.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384L8.41 4.658A.25.25 0 0 1 8 4.466z" />
                            </svg>
                        </button>
                    </div>

                </div>
            </div>
        </footer>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/app-constants.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/sidebar.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("Styles", required: false)
</body>

</html>