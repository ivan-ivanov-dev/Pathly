@using MicroTaskTracker.Models.ViewModels.Authentication
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

@section Styles 
{
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
}

<div class="auth-view-wrapper">
    <div class="back-link-wrapper">
        <a asp-controller="Home" asp-action="Index">← Back to Main</a>
    </div>

    <form id="loginForm" asp-action="Login" method="post" novalidate class="auth-form">
        @Html.AntiForgeryToken()
        <h2>@ViewData["Title"]</h2>
        <p class="text-muted text-center mb-4">Welcome back! Please login to your Pathly account.</p>

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">Username or Email</label>
            <input asp-for="Email" type="text" class="form-control" id="LoginIdentifier" placeholder="Username or email" />
            <span asp-validation-for="Email" class="error-text"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" type="password" class="form-control" id="Password" placeholder="Enter password" />
            <span asp-validation-for="Password" class="error-text"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="RememberMe" class="form-check-input" id="RememberMe" />
            <label asp-for="RememberMe" class="form-check-label">Remember me</label>
        </div>

        <div class="auth-actions">
            <button type="submit" class="btn btn-primary">Login</button>
            <a asp-action="Register" class="btn btn-link">Don't have an account? Register</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/auth.js"></script>
}