@using MicroTaskTracker.Models.ViewModels.TasksViewModels

@model TaskDeleteViewModel

@{
    ViewData["Title"] = "Confirm Delete";
}

<link rel="stylesheet" href="~/css/tasks.css" asp-append-version="true" />

<!-- CHANGED: Improved header and alert styling -->
<div class="mb-4">
    <h1 class="h2">@ViewData["Title"]</h1>
</div>

<div class="alert alert-warning d-flex align-items-start mb-4">
    <!-- CHANGED: Added icon placeholder and improved text -->
    <div>
        <p class="mb-0 fw-semibold">Are you sure you want to delete this task?</p>
        <p class="mb-0 small">This action cannot be undone.</p>
    </div>
</div>

<!-- CHANGED: Added card to display task details before deletion -->
<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title mb-3">Task to be deleted:</h5>
        <p class="mb-2"><strong>Title:</strong> @Model.Title</p>
        <p class="mb-0"><strong>ID:</strong> @Model.Id</p>
    </div>
</div>

<!-- CHANGED: Improved button layout and styling -->
<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
    </div>
</form>