@using MicroTaskTracker.Models.ViewModels.TasksViewModels
@model TaskDetailsViewModel

<div class="bg-light p-3 rounded">
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="card mb-4">
                <div class="card-body">
                    <div class="mb-4">
                        <h6 class="text-muted text-uppercase mb-2" style="font-size: 0.75rem; letter-spacing: 0.05em;">Description</h6>
                        <p class="mb-0">@(string.IsNullOrWhiteSpace(Model.Description) ? "No description provided." : Model.Description)</p>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="border rounded p-3">
                                <h6 class="text-muted text-uppercase mb-2" style="font-size: 0.75rem;">Priority</h6>
                                <p class="mb-0 fw-semibold">@Model.Priority</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="border rounded p-3">
                                <h6 class="text-muted text-uppercase mb-2" style="font-size: 0.75rem;">Status</h6>
                                <p class="mb-0 fw-semibold">@(Model.IsCompleted ? "Completed" : "Open")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="border rounded p-3">
                                <h6 class="text-muted text-uppercase mb-2" style="font-size: 0.75rem;">Created</h6>
                                <p class="mb-0">@Model.CreatedOn.ToLocalTime().ToString("MMMM dd, yyyy")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="border rounded p-3">
                                <h6 class="text-muted text-uppercase mb-2" style="font-size: 0.75rem;">Due Date</h6>
                                <p class="mb-0">@(Model.DueDate?.ToString("MMMM dd, yyyy") ?? "—")</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="d-flex gap-2">
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>