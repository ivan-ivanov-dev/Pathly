@using MicroTaskTracker.Models.DBModels
@using MicroTaskTracker.Models.ViewModels.TasksViewModels
@model TaskListViewModel

@{
    ViewData["Title"] = "Task List";
}

<!-- CHANGED: Added page-header class for consistent styling -->
<div class="page-header mb-4">
    <h1 class="h2 mb-0">@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-success">+ Create Task</a>
</div>

<!-- CHANGED: Removed duplicate Create button -->
<!-- CHANGED: Improved filter card styling -->
<div class="card mb-4">
    <div class="card-header">
        Filter Tasks
    </div>
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label">Search by title</label>
                <input type="text"
                       name="SearchByTitle"
                       class="form-control"
                       value="@Context.Request.Query["SearchByTitle"]"
                       placeholder="Search..." />
            </div>

            <div class="col-md-2">
                <label class="form-label">Priority</label>
                <select name="Priority" class="form-select">
                    <option value="">All</option>
                    @foreach (var p in Enum.GetValues<TaskPriority>())
                    {
                        <option value="@( (int)p )" selected="@(Context.Request.Query["Priority"] == ((int)p).ToString())">
                            @p
                        </option>
                    }
                </select>
            </div>

            <div class="col-md-2">
                <label class="form-label">Status</label>
                <select name="IsCompleted" class="form-select">
                    <option value="">All</option>
                    <option value="true" selected="@(Context.Request.Query["IsCompleted"] == "true")">Completed</option>
                    <option value="false" selected="@(Context.Request.Query["IsCompleted"] == "false")">In Progress</option>
                </select>
            </div>

            <div class="col-md-2">
                <label class="form-label">Due date</label>
                <input type="date"
                       name="DueDate"
                       class="form-control"
                       value="@Context.Request.Query["DueDate"]" />
            </div>

            <div class="col-md-2">
                <label class="form-label">Order</label>
                <select name="Ascending" class="form-select">
                    <option value="true" selected="@(Context.Request.Query["Ascending"] == "true")">Ascending</option>
                    <option value="false" selected="@(Context.Request.Query["Ascending"] == "false")">Descending</option>
                </select>
            </div>

            <div class="col-md-1">
                <button type="submit" class="btn btn-primary w-100">Apply</button>
            </div>
        </form>
    </div>
</div>

<!-- CHANGED: Enhanced table styling and removed outer card for cleaner look -->
<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Priority</th>
                        <th>Due</th>
                        <th>Created</th>
                        <th>Status</th>
                        <th style="width:280px">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var task in Model.Tasks)
                    {
                        <tr>
                            <td class="fw-semibold">@task.Title</td>
                            <td>
                                <form asp-action="UpdatePriority" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@task.Id" />

                                    <select name="priority"
                                            class="form-select form-select-sm priority-select"
                                            style="width: 120px;"
                                            asp-for="@task.Priority"
                                            asp-items="Html.GetEnumSelectList<TaskPriority>()"
                                            data-auto-submit="true">
                                    </select>

                                </form>
                            </td>
                            <td>
                                <!-- CHANGED: Improved date formatting -->
                                @if (task.DueDate.HasValue)
                                {
                                    <span>@task.DueDate.Value.ToString("MMM dd, yyyy")</span>
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </td>
                            <td class="text-muted" style="font-size: 0.875rem;">@task.CreatedOn.ToLocalTime().ToString("MMM dd, yyyy")</td>
                            <td>
                                <form asp-action="MarkTaskStatus" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@task.Id" />
                                    <button type="submit" class="btn btn-sm @(task.IsCompleted ? "btn-outline-secondary" : "btn-success")">
                                        @(task.IsCompleted ? "Reopen" : "Complete")
                                    </button>
                                </form>
                            </td>
                            <td>
                                <!-- CHANGED: Improved button spacing and layout -->
                                <div class="d-flex gap-1">
                                    <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-sm btn-primary">Edit</a>
                                    <a asp-action="Delete"
                                       asp-route-id="@task.Id"
                                       class="btn btn-sm btn-danger"
                                       data-confirm-delete="true">
                                        Delete
                                    </a>
                                    <a asp-action="Details" asp-route-id="@task.Id" class="btn btn-sm btn-outline-secondary">Details</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/tasks.css" />
}

@section Scripts {
    <script src="~/js/tasks.js"></script>
}