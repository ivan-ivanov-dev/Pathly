@using MicroTaskTracker.Models.DBModels
@using MicroTaskTracker.Models.ViewModels.TasksViewModels
@using MicroTaskTracker.Models.ViewModels
@model TaskListViewModel

@{
    ViewData["Title"] = "Task Inventory";
}

@section Styles {
    <link rel="stylesheet" href="~/css/tasks.css" asp-append-version="true" />
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-5 animate-fade-in">
        <div>
            <h2 class="fw-bold text-dark mb-1">Task Inventory</h2>
            <p class="text-muted small mb-0">Manage and track your strategic micro-tasks</p>
        </div>

        <a href="#"
           class="btn btn-primary rounded-pill px-4 shadow-sm fw-bold"
           data-modal-url="@Url.Action("Create", "Tasks")"
           data-modal-title="Create Task">
            <i class="bi bi-plus-lg me-2"></i>New Task
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-4 mb-5">
        <div class="card-body p-3">
            <form method="get" class="row g-2 align-items-end">
                <div class="col-md-4">
                    <div class="input-group input-group-sm">
                        <span class="input-group-text bg-light border-0"><i class="bi bi-search text-muted"></i></span>
                        <input type="text" name="SearchByTitle" class="form-control border-0 bg-light shadow-none"
                               value="@Context.Request.Query["SearchByTitle"]" placeholder="Search tasks..." />
                    </div>
                </div>

                <div class="col-md-2">
                    <select name="Priority" class="form-select form-select-sm border-0 bg-light shadow-none">
                        <option value="">All Priorities</option>
                        @foreach (var p in Enum.GetValues<TaskPriority>())
                        {
                            <option value="@((int)p)" selected="@(Context.Request.Query["Priority"] == ((int)p).ToString())">@p</option>
                        }
                    </select>
                </div>

                <div class="col-md-2">
                    <select name="IsCompleted" class="form-select form-select-sm border-0 bg-light shadow-none">
                        <option value="">All Statuses</option>
                        <option value="true" selected="@(Context.Request.Query["IsCompleted"] == "true")">Completed</option>
                        <option value="false" selected="@(Context.Request.Query["IsCompleted"] == "false")">In Progress</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <input type="date" name="DueDate" class="form-control form-control-sm border-0 bg-light shadow-none"
                           value="@Context.Request.Query["DueDate"]" />
                </div>

                <div class="col-md-2">
                    <button type="submit" class="btn btn-dark btn-sm w-100 rounded-pill fw-bold">Apply Filters</button>
                </div>
            </form>
        </div>
    </div>

    <div class="row g-4">
        @foreach (var task in Model.Tasks)
        {
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 border-0 shadow-sm task-card @(task.IsCompleted ? "opacity-75 bg-light" : "")"
                     style="border-top: 4px solid @(task.Priority == TaskPriority.High ? "#dc3545" : task.Priority == TaskPriority.Medium ? "#ffc107" : "#0d6efd") !important;">

                    <div class="card-body p-4 d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <form asp-action="UpdatePriority" method="post" class="mt-2">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@task.Id" />
                                <select name="priority"
                                        class="form-select form-select-sm priority-select-direct border-0 bg-soft-light"
                                        data-task-id="@task.Id"
                                        asp-for="@task.Priority"
                                        asp-items="Html.GetEnumSelectList<TaskPriority>()">
                                </select>
                            </form>
                            <div class="dropdown">
                                <button class="btn btn-link text-muted p-0" data-bs-toggle="dropdown"><i class="bi bi-three-dots-vertical"></i></button>
                                <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                                    <li><a class="dropdown-item small" href="#" data-modal-url="@Url.Action("Edit", "Tasks", new { id = task.Id })"><i class="bi bi-pencil me-2"></i>Edit</a></li>
                                    <li><a class="dropdown-item small" href="#" data-modal-url="@Url.Action("Details", "Tasks", new { id = task.Id })"><i class="bi bi-info-circle me-2"></i>Details</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item small text-danger" href="#" data-modal-url="@Url.Action("Delete", "Tasks", new { id = task.Id })"><i class="bi bi-trash me-2"></i>Delete</a></li>
                                </ul>
                            </div>
                        </div>

                        <h5 class="fw-bold mb-2 @(task.IsCompleted ? "text-decoration-line-through text-muted" : "text-dark")">@task.Title</h5>

                        <div class="mt-auto">
                            <div class="d-flex align-items-center mb-3 text-muted small">
                                <i class="bi bi-calendar-event me-2"></i>
                                <span>Due: @(task.DueDate?.ToString("MMM dd, yyyy") ?? "No date set")</span>
                            </div>

                            <div class="d-flex gap-2">
                                <form asp-action="MarkTaskStatus" method="post" class="flex-grow-1">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@task.Id" />
                                    <button type="submit" class="btn btn-sm w-100 rounded-pill @(task.IsCompleted ? "btn-outline-secondary" : "btn-success") fw-bold">
                                        <i class="bi @(task.IsCompleted ? "bi-arrow-counterclockwise" : "bi-check2-circle") me-1"></i>
                                        @(task.IsCompleted ? "Reopen" : "Finish")
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="modal fade" id="taskModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div id="taskModalBody"></div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/tasks.js" asp-append-version="true"></script>
}