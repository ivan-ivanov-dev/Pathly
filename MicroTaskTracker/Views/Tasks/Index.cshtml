@using MicroTaskTracker.Models.DBModels
@using MicroTaskTracker.Models.ViewModels.TasksViewModels
@using MicroTaskTracker.Models.ViewModels
@model TaskListViewModel

@{
    ViewData["Title"] = "Task List";
}

<div class="tasks-header d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">@ViewData["Title"]</h1>

    <!-- Open Create modal via data-modal-url -->
    <a href="#"
       class="btn btn-success"
       data-modal-url="@Url.Action("Create", "Tasks")"
       data-modal-title="Create Task">
        Create Task
    </a>
</div>

<form method="get" class="row g-2 align-items-end mb-4">
    <div class="col-md-3">
        <label class="form-label">Search by title</label>
        <input type="text"
               name="SearchByTitle"
               class="form-control"
               value="@Context.Request.Query["SearchByTitle"]"
               placeholder="Search..." />
    </div>

    <div class="col-md-2">
        <label class="form-label">Priority</label>
        <select name="Priority" class="form-select">
            <option value="">All</option>
            @foreach (var p in Enum.GetValues<TaskPriority>())
            {
                <option value="@( (int)p )" selected="@(Context.Request.Query["Priority"] == ((int)p).ToString())">
                    @p
                </option>
            }
        </select>
    </div>

    <div class="col-md-2">
        <label class="form-label">Status</label>
        <select name="IsCompleted" class="form-select">
            <option value="">All</option>
            <option value="true" selected="@(Context.Request.Query["IsCompleted"] == "true")">Completed</option>
            <option value="false" selected="@(Context.Request.Query["IsCompleted"] == "false")">In Progress</option>
        </select>
    </div>

    <div class="col-md-2">
        <label class="form-label">Due date</label>
        <input type="date"
               name="DueDate"
               class="form-control"
               value="@Context.Request.Query["DueDate"]" />
    </div>

    <div class="col-md-2">
        <label class="form-label">Order</label>
        <select name="Ascending" class="form-select">
            <option value="true" selected="@(Context.Request.Query["Ascending"] == "true")">Ascending</option>
            <option value="false" selected="@(Context.Request.Query["Ascending"] == "false")">Descending</option>
        </select>
    </div>

    <div class="col-md-1">
        <button type="submit" class="btn btn-primary w-100">Apply</button>
    </div>
</form>

<table class="table table-striped table-bordered tasks-table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Priority</th>
            <th>Due</th>
            <th>Created</th>
            <th>Status</th>
            <th style="width:300px">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model.Tasks)
        {
            <tr class="@(task.IsCompleted ? "task-completed" : "")">
                <td>@task.Title</td>
                <td>
                    <form asp-action="UpdatePriority" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@task.Id" />

                        <select name="priority"
                                class="form-select form-select-sm priority-select"
                                asp-for="@task.Priority"
                                asp-items="Html.GetEnumSelectList<TaskPriority>()"
                                data-auto-submit="true">
                        </select>

                    </form>
                </td>
                <td>@(task.DueDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                <td>@task.CreatedOn.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>
                    <form asp-action="MarkTaskStatus" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@task.Id" />
                        <button type="submit" class="btn btn-sm @(task.IsCompleted ? "btn-secondary" : "btn-success")">
                            @(task.IsCompleted ? "Reopen" : "Complete")
                        </button>
                    </form>
                </td>
                <td>
                    <!-- Edit opens modal loading Edit partial -->
                    <a href="#"
                       class="btn btn-sm btn-primary"
                       data-modal-url="@Url.Action("Edit", "Tasks", new { id = task.Id })"
                       data-modal-title="Edit Task">
                        Edit
                    </a>

                    <!-- Delete opens modal confirmation -->
                    <a href="#"
                       class="btn btn-sm btn-danger me-1"
                       data-modal-url="@Url.Action("Delete", "Tasks", new { id = task.Id })"
                       data-modal-title="Delete Task">
                        Delete
                    </a>

                    <!-- Details opens modal loading Details partial -->
                    <a href="#"
                       class="btn btn-sm btn-info me-1"
                       data-modal-url="@Url.Action("Details", "Tasks", new { id = task.Id })"
                       data-modal-title="See Details">
                        Details
                    </a>
                </td>
            </tr>

        }
    </tbody>
</table>

<!-- Generic task modal used by tasks.js -->
<div class="modal fade" id="taskModal" tabindex="-1" aria-labelledby="taskModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="taskModalTitle">Task</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="taskModalBody">
                @* Content will be loaded dynamically via tasks.js when an element with data-modal-url is clicked. *@
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/tasks.css" />
}

@section Scripts {
    <script src="~/js/tasks.js"></script>

    <script>
        // focus Title input when modal opens (if partial includes input#Title or form#createTaskForm)
        (function () {
            const taskModalEl = document.getElementById('taskModal');
            if (!taskModalEl) return;

            taskModalEl.addEventListener('shown.bs.modal', function () {
                const titleInput = document.querySelector('#taskModalBody input[name="Title"], #taskModalBody #Title');
                if (titleInput) titleInput.focus();
            });
        })();
    </script>
}