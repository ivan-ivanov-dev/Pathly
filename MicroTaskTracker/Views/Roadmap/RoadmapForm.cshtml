@model MicroTaskTracker.Models.ViewModels.Roadmaps.RoadmapCreateViewModel

@{
    ViewData["Title"] = Model.IsEditing ? "Refine Your Strategy" : "Design Your Path";
}

@section Styles {
    <link rel="stylesheet" href="~/css/tasks.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/roadmap.css" asp-append-version="true" />
}

<div class="roadmap-page-bg">
    <div class="container py-4">

        <div class="text-center mb-5 animate-fade-in">
            <h2 class="fw-bold text-dark">Strategic Goal</h2>
            <div class="mx-auto bg-primary" style="height: 4px; width: 60px; border-radius: 2px;"></div>
        </div>

        <div class="mb-4 animate-fade-in">
            <a asp-action="Selection" class="back-to-selection text-decoration-none">
                <i class="bi bi-arrow-left-circle-fill fs-4 align-middle"></i>
                <span class="ms-2 fw-medium">Return to Path Selection</span>
            </a>
        </div>

        @* FORM START *@
        <form id="roadmapForm" asp-action="Save" method="post" class="roadmap-flow-container">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="IsEditing" id="isEditingHidden" />
            <input type="hidden" asp-for="RoadmapId" />

            <div class="roadmap-node animate-fade-in">
                <div class="node-icon bg-primary"><i class="bi bi-geo-alt-fill"></i></div>
                <div class="node-content card shadow border-0">
                    <div class="card-body">
                        <label class="form-label fw-bold text-uppercase small text-primary">The Destination</label>
                        @if (Model.SelectedGoalId.HasValue)
                        {
                            <input type="hidden" asp-for="SelectedGoalId" />
                            <input type="hidden" asp-for="NewGoalTitle" />
                            <input type="hidden" asp-for="NewGoalDescription" />
                            <h3 class="mb-1">@Model.NewGoalTitle</h3>
                            <p class="text-muted mb-0">@Model.NewGoalDescription</p>
                        }
                        else
                        {
                            <input asp-for="NewGoalTitle" class="form-control form-control-lg border-0 ps-0 fw-bold" placeholder="Goal Name..." />
                            <textarea asp-for="NewGoalDescription" class="form-control border-0 ps-0" rows="1" placeholder="Goal Description..."></textarea>
                        }
                    </div>
                </div>
            </div>

            <div class="roadmap-line"></div>

            <div class="roadmap-node animate-fade-in">
                <div class="node-icon bg-info"><i class="bi bi-heart-fill"></i></div>
                <div class="node-content card shadow border-0">
                    <div class="card-body">
                        <label class="form-label fw-bold text-uppercase small text-info">The "Why"</label>
                        <textarea asp-for="Why" class="form-control border-0 ps-0" rows="2" placeholder="What is the deeper purpose behind this goal?"></textarea>
                    </div>
                </div>
            </div>

            <div class="roadmap-line"></div>

            <div class="roadmap-node wide-node animate-fade-in">
                <div class="node-icon bg-warning text-dark"><i class="bi bi-stack"></i></div>
                <div class="action-header-pill">Set Milestones & Tasks</div>

                <div class="row g-4 w-100">
                    @for (int i = 0; i < Model.Actions.Count; i++)
                    {
                        <div class="col-lg-4">
                            <div class="action-card card h-100 shadow-sm">
                                <div class="card-body d-flex flex-column">
                                    <input type="hidden" asp-for="Actions[i].Id" />
                                    <input asp-for="Actions[i].Title" class="form-control mb-2 fw-bold border-0 bg-light shadow-none" placeholder="Action Title" />

                                    <div class="input-group input-group-sm mb-1">
                                        <span class="input-group-text bg-transparent border-0"><i class="bi bi-calendar"></i></span>
                                        <input asp-for="Actions[i].DueDate" type="date" class="form-control border-0 shadow-none" />
                                    </div>

                                    <div class="task-preview-zone flex-grow-1">
                                        <label class="tiny-bold text-muted text-uppercase mb-2 d-block">Linked Tasks</label>
                                        <div id="action-tasks-@Model.Actions[i].Id">
                                            @if (Model.Actions[i].AssignedTasks != null && Model.Actions[i].AssignedTasks.Any())
                                            {
                                                @foreach (var task in Model.Actions[i].AssignedTasks)
                                                {
                                                    <div class="d-flex justify-content-between align-items-center py-1 border-bottom-dashed" id="task-item-@task.Id">
                                                        <span class="small text-truncate me-2">@task.Title</span>
                                                        <button type="button" class="btn btn-link btn-sm text-danger p-0" onclick="RoadmapPlanner.deleteTaskPermanently(@task.Id)">
                                                            <i class="bi bi-x-circle-fill"></i>
                                                        </button>
                                                    </div>
                                                }
                                            }
                                            else
                                            {
                                                <span class="small text-muted fst-italic">No tasks linked.</span>
                                            }
                                        </div>
                                    </div>

                                    <div class="d-flex gap-2 mt-3">
                                        <button type="button" class="btn btn-sm btn-primary flex-grow-1"
                                                data-modal-url="@Url.Action("Create", "Tasks", new { actionId = Model.Actions[i].Id })">
                                            <i class="bi bi-plus-lg"></i> New
                                        </button>

                                        @if (Model.IsEditing && Model.Actions[i].Id > 0)
                                        {
                                            <a asp-action="Planner" asp-route-actionId="@Model.Actions[i].Id" asp-route-roadmapId="@Model.RoadmapId"
                                               class="btn btn-sm btn-outline-secondary flex-grow-1">
                                                <i class="bi bi-link-45deg"></i> Plan
                                            </a>
                                        }
                                        else
                                        {
                                            <button type="button" class="btn btn-sm btn-outline-secondary flex-grow-1" disabled
                                                    title="Save the roadmap first to enable planning">
                                                <i class="bi bi-lock-fill"></i> Plan
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="roadmap-line"></div>

            <div class="roadmap-node animate-fade-in">
                <div class="node-icon bg-success"><i class="bi bi-trophy-fill"></i></div>
                <div class="node-content card shadow border-0">
                    <div class="card-body">
                        <label class="form-label fw-bold text-uppercase small text-success">The Victory</label>
                        <textarea asp-for="IdealOutcome" class="form-control border-0 ps-0" rows="2" placeholder="Describe the win..."></textarea>
                    </div>
                </div>
            </div>

            <div class="text-center mt-5 pb-5">
                <button type="button" class="btn btn-primary btn-lg rounded-pill px-5 shadow-lg" onclick="triggerMajesticSave()">
                    <i class="bi bi-check-circle-fill me-2"></i> Save Strategy
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/tasks.js" asp-append-version="true"></script>
    <script src="~/js/roadmap.js" asp-append-version="true"></script>

    <script>
        function triggerMajesticSave() {
            Swal.fire({
                title: 'Commit Strategy?',
                text: "Your roadmap will be updated. You can then begin linking detailed tasks.",
                icon: 'success',
                showCancelButton: true,
                confirmButtonColor: '#0d6efd',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Save & Continue Editing',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('roadmapForm').submit();
                }
            });
        }
    </script>
}