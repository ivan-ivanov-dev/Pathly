@using Pathly.DataModels
@model List<Tag>

@{
    ViewData["Title"] = "My Tags";
}

<h2 class="mb-3">My Tags</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Create Tag</a>

@if (!Model.Any())
{
    <div class="alert alert-info">You don’t have any tags yet.</div>
}
else
{
    <div class="d-flex flex-wrap gap-2">
        @foreach (var tag in Model)
        {
            <div class="badge bg-secondary d-flex align-items-center gap-2 p-2">
                <span>@tag.Name</span>
                <form asp-action="Delete" method="post" class="m-0">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@tag.Id" />
                    <button type="submit" class="btn btn-sm btn-light">×</button>
                </form>
            </div>
        }
    </div>
}
