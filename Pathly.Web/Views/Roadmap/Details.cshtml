@using Pathly.ViewModels.Roadmaps
@model RoadmapDeatailsViewModel

@{
    ViewData["Title"] = "Strategy Details";
}

@section Styles {
    <link rel="stylesheet" href="~/css/tasks.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/roadmap.css" asp-append-version="true" />
}


<div class="roadmap-page-bg">
    
    <div class="container py-4">
        @Html.AntiForgeryToken()
        @* TOP NAVIGATION BAR *@
        <div class="d-flex justify-content-between align-items-center mb-5 animate-fade-in">
            <a asp-action="Selection" class="back-to-selection text-decoration-none text-muted">
                <i class="bi bi-arrow-left-circle-fill fs-4 align-middle text-primary"></i>
                <span class="ms-2 fw-medium">Return to Dashboard</span>
            </a>

            <div class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.RoadmapId" class="btn btn-outline-primary rounded-pill px-4 shadow-sm border-2 fw-bold">
                    <i class="bi bi-pencil-square me-2"></i>Refine Path
                </a>
                <button type="button" class="btn btn-outline-danger rounded-pill px-4 shadow-sm border-2 fw-bold" onclick="showDeleteModal()">
                    <i class="bi bi-trash3 me-2"></i>Abandon
                </button>
            </div>
        </div>

        <div class="roadmap-flow-container">

            @* PHASE I: THE VISION *@
            <div class="roadmap-node animate-fade-in">
                <div class="node-icon bg-primary shadow"><i class="bi bi-geo-alt-fill"></i></div>
                <div class="node-content card shadow-sm border-0 overflow-hidden">
                    <div class="card-header bg-primary bg-gradient text-white border-0 py-2 px-4 d-flex justify-content-between align-items-center">
                        <span class="text-uppercase small fw-bold tracking-wider">Phase I: The Vision</span>
                        <span class="card-header-pill">Destination</span>
                    </div>
                    <div class="card-body p-4 text-center">
                        <h2 class="fw-bold mb-2">@Model.GoalTitle</h2>
                        <p class="text-muted mb-0 mx-auto" style="max-width: 600px;">@Model.GoalDescription</p>
                    </div>
                </div>
            </div>

            <div class="roadmap-line"></div>

            @* PHASE II: THE MOTIVATION *@
            <div class="roadmap-node animate-fade-in">
                <div class="node-icon bg-info shadow text-white"><i class="bi bi-lightning-charge-fill"></i></div>
                <div class="node-content card shadow-sm border-0 overflow-hidden">
                    <div class="card-header bg-info bg-gradient text-white border-0 py-2 px-4 d-flex justify-content-between align-items-center">
                        <span class="text-uppercase small fw-bold tracking-wider">Phase II: The Drive</span>
                        <span class="card-header-pill">The "Why"</span>
                    </div>
                    <div class="card-body p-4 text-center">
                        <p class="lead fst-italic mb-0 text-dark">"@Model.Why"</p>
                    </div>
                </div>
            </div>

            <div class="roadmap-line"></div>

            @* PHASE III: MILESTONES *@
            <div class="roadmap-node wide-node animate-fade-in">
                <div class="node-icon bg-warning text-dark shadow"><i class="bi bi-stack"></i></div>
                <div class="action-header-pill shadow-sm">Phase III: Strategic Progress</div>

                <div class="row g-4 w-100">
                    @for (int i = 0; i < Model.Actions.Count; i++)
                    {
                        var action = Model.Actions[i];
                        <div class="col-lg-4">
                            <div class="action-card card h-100 shadow-sm border-0 border-top-warning border-4">
                                <div class="card-body p-4 d-flex flex-column">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <div>
                                            <span class="badge bg-soft-primary text-primary text-uppercase mb-1" style="font-size: 0.65rem;">Milestone @(i + 1)</span>
                                            <h5 class="fw-bold mb-0">@action.Title</h5>
                                        </div>
                                        @if (action.DueDate.HasValue)
                                        {
                                            <span class="badge bg-light text-muted border py-2">@action.DueDate.Value.ToString("MMM dd")</span>
                                        }
                                    </div>

                                    @* TASKS SECTION *@
                                    <div class="task-branch-section mt-2 flex-grow-1">
                                        <div class="small fw-bold text-muted text-uppercase mb-2" style="font-size: 0.7rem; letter-spacing: 0.05em;">
                                            <i class="bi bi-list-check me-1"></i> Active Tasks
                                        </div>

                                        <ul class="list-unstyled mb-0">
                                            @if (action.AssignedTasks != null && action.AssignedTasks.Any())
                                            {
                                                @foreach (var task in action.AssignedTasks)
                                                {
                                                    <li class="small py-2 d-flex align-items-center justify-content-between border-bottom-dashed" id="task-item-@task.Id">
                                                        <div class="d-flex align-items-center overflow-hidden me-2">
                                                            <i class="bi bi-dot text-primary fs-4 flex-shrink-0"></i>
                                                            <span class="text-truncate" title="@task.Title">@task.Title</span>
                                                        </div>
                                                        <button type="button" class="unlink-action-btn" onclick="RoadmapDetails.unlinkTask('@task.Id', '@Url.Action("UnlinkTask", "Roadmap")')">
                                                            <i class="bi bi-x-lg"></i>
                                                        </button>
                                                    </li>
                                                }
                                            }
                                            else
                                            {
                                                <li class="small text-muted fst-italic py-2 opacity-75">No tasks linked yet.</li>
                                            }
                                        </ul>
                                    </div>

                                    @* RESOURCES SECTION - ADDED HERE *@
                                    @if (!string.IsNullOrEmpty(action.Resources))
                                    {
                                        <div class="mt-3 pt-3 border-top">
                                            <div class="small fw-bold text-muted text-uppercase mb-2" style="font-size: 0.7rem;">
                                                <i class="bi bi-link-45deg me-1 text-warning"></i> Resources
                                            </div>
                                            <div class="resource-box p-2 rounded small text-dark border shadow-sm">
                                                @action.Resources
                                            </div>
                                        </div>
                                    }

                                    @* BUTTONS *@
                                    <div class="d-flex gap-2 mt-4 pt-2">
                                        <button type="button" class="btn btn-sm btn-primary flex-grow-1 rounded-pill"
                                                data-modal-url="@Url.Action("Create", "Tasks", new { actionId = action.ActionId })">
                                            <i class="bi bi-plus-lg me-1"></i> Add Task
                                        </button>
                                        <a asp-action="Planner" asp-route-actionId="@action.ActionId" asp-route-roadmapId="@Model.RoadmapId"
                                           class="btn btn-sm btn-outline-secondary flex-grow-1 rounded-pill">
                                            <i class="bi bi-link-45deg me-1"></i> Connect
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="roadmap-line"></div>

            @* PHASE IV: THE VICTORY *@
            <div class="roadmap-node animate-fade-in">
                <div class="node-icon bg-success shadow text-white"><i class="bi bi-trophy-fill"></i></div>
                <div class="node-content card shadow-sm border-0 overflow-hidden">
                    <div class="card-header bg-success bg-gradient text-white border-0 py-2 px-4 d-flex justify-content-between align-items-center">
                        <span class="text-uppercase small fw-bold tracking-wider">Phase IV: The Victory</span>
                        <span class="card-header-pill">Success Criteria</span>
                    </div>
                    <div class="card-body p-4 text-center">
                        <h5 class="fw-bold mb-0">@Model.IdealOutcome</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@* DELETE MODAL *@
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-body p-5 text-center">
                <i class="bi bi-exclamation-octagon text-danger display-1 mb-4"></i>
                <h3 class="fw-bold">Abandon Strategy?</h3>
                <p class="text-muted">You are about to delete this roadmap and all its milestone tracking. This cannot be undone.</p>
                <form asp-action="Delete" method="post" class="mt-4 d-grid gap-2">
                    <input type="hidden" name="id" value="@Model.RoadmapId" />
                    <button type="submit" class="btn btn-danger btn-lg rounded-pill">Confirm Deletion</button>
                    <button type="button" class="btn btn-link text-muted text-decoration-none" data-bs-dismiss="modal">Keep Strategy</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/tasks.js" asp-append-version="true"></script>
    <script src="~/js/roadmap.js" asp-append-version="true"></script>
    
}